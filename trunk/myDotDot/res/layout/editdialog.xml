<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/editX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtBigX"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editX"
        android:layout_below="@+id/editX"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/txtBigX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editX"
        android:layout_alignBottom="@+id/editX"
        android:layout_alignParentLeft="true"
        android:text="X Coor"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/txtBigY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editY"
        android:layout_alignBottom="@+id/editY"
        android:layout_toLeftOf="@+id/editY"
        android:text="YCoor"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
