<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@color/my_red_bg"
    tools:context=".QuestFragment" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0" >

                <TextView
                    android:id="@+id/dummyPetNameSet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="PET Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/my_red_text_red" />

                <TextView
                    android:id="@+id/txtPetNamePK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="setName"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/my_red_text_red" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0" >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_red"
                            android:drawableLeft="@drawable/pet_hp"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/dummyHPSet"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="HP"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_dark" />

                        <TextView
                            android:id="@+id/txtPetHPSet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=": HP"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0" >

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_red"
                            android:drawableLeft="@drawable/pet_atk"
                            android:gravity="center"
                            android:text=" "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/dummyATKSet"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="ATK"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_dark" />

                        <TextView
                            android:id="@+id/txtPetATKSet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=": ATK"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_dark" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0" >

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_red"
                            android:drawableLeft="@drawable/pet_def"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/dummyDEFSet"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="DEF"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_dark" />

                        <TextView
                            android:id="@+id/txtPetDEFSet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=": DEF"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_dark" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0" >

                        <TextView
                            android:id="@+id/TextView04"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_red"
                            android:drawableLeft="@drawable/pet_spd"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/dummySPDSet"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="SPD"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_dark" />

                        <TextView
                            android:id="@+id/txtPetSPDSet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=": SPD"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_dark" />
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0" >

                <TextView
                    android:id="@+id/dummyPETWonscore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="WIN"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/my_red_text_red" />

                <TextView
                    android:id="@+id/txtPetWONPK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="setWON"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0" >

                <TextView
                    android:id="@+id/dummyPETLoseScore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="LOSE"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/my_red_text_red" />

                <TextView
                    android:id="@+id/txtPetLOSEPK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="setLOSE"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/blue" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_conserver"
                style="@style/Button_my"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="30dp"
                android:layout_weight="0"
                android:background="@drawable/circle_red"
                android:text="VS"
                android:textColor="#fff"
                android:textSize="75dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>